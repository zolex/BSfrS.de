<!DOCTYPE html>
<html>
    <head>
        <meta charset="{{ _charset }}" />
        <meta name="robots" content="noindex,nofollow" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ include('@Twig/images/favicon.png.base64') }}">
        <style>{{ include('@Twig/exception.css.twig') }}</style>
        {% block head %}{% endblock %}
    </head>
    <body>
        <header>
            <div class="container">
                <h1 class="logo">{{ include('@Twig/images/symfony-logo.svg') }} Rautavistische Ausnahme-Sinfonie</h1>

                <div class="help-link">
                    <a onClick="javascript:confirm('Nein, einfach nein.');" href="#">
                        <span class="hidden-xs-down">Fehler Dokumentation</span>
                    </a>
                </div>

                <div class="help-link">
                    <a onClick="alert('Leider auch das nicht... (undzwar mit voller Absicht)')" href="#">
                        <span class="hidden-xs-down">Hile und Support</span>
                    </a>
                </div>
            </div>
        </header>

        {% block body %}{% endblock %}
        {{ include('@Twig/base_js.html.twig') }}
    </body>
</html>